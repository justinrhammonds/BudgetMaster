@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}


<div class="row">
    <div class="panel panel-default col-sm-6 col-sm-offset-3" style="margin-top:40px;">
        <div class="panel-heading"><h4>Oops! We must have made a mistake...</h4></div>
        <div class="panel-body">
            <div class="col-sm-5">
                <img id="concerned-kitty" src="~/Content/concerned-kitty.jpg" />
            </div>
            <div class="col-sm-7">

                @{
                    if (String.IsNullOrEmpty(ViewBag.errorMessage))
                    {
                        <h4 class="text-danger">An error occurred while processing your request.</h4>
                    }
                    else
                    {
                        <h4 class="text-danger">@ViewBag.errorMessage</h4>
                    }
                }
            </div>
        </div>
    </div>
</div>






