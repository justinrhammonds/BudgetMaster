@model IEnumerable<BudgetMaster.Models.CodeFirst.Category>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-12">
    <div id="deleteCatModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
    <div id="categoryPV"></div>
    <div class="panel panel-default">
        <div class="container panel-heading">
            <div class="col-sm-8"><h4>Budget Categories</h4></div>
            <div id="createPV" class="btn btn-success btn-lg col-sm-4 pull-right">Create a New Category</div>
        </div>
        <div class="panel-body">
            <table class="table table-responsive table-hover">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>Edit/Delete</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>
                            <span>
                                <button class="btn editPV" data-id=@item.Id><i class="fa fa-pencil"></i></button>
                                <button class="btn deleteCatPV" data-id=@item.Id data-toggle="modal" data-target="#deleteCatModal"><i class="fa fa-trash"></i></button>
                            </span>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#createPV").click(function () {
            $("#categoryPV").load('/Categories/_CreatePV/');
        })
        $(".editPV").click(function () {
            $("#categoryPV").load('/Categories/_EditPV/' + $(this).data('id'));
        })
        $(".deleteCatPV").click(function () {
            $("#deleteCatModal").load('/Categories/_DeleteCatPV/' + $(this).data('id'));
        })
    </script>
}
