@model IEnumerable<BudgetMaster.Models.CodeFirst.Category>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-12">
    <div id="categoryPV"></div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div>
                <button class="btn createPV">Create New Category</button>
            </div>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Household.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Household.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <span>
                                <button class="btn editPV" data-id=@item.Id><i class="fa fa-pencil"></i></button>
                                <button class="btn deletePV" data-id=@item.Id><i class="fa fa-trash"></i></button>
                            </span>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".createPV").click(function () {
            $("#categoryPV").load('/Categories/_CreatePV/');
        })
        $(".editPV").click(function () {
            $("#categoryPV").load('/Categories/_EditPV/' + $(this).data('id'));
        })
        $(".deletePV").click(function () {
            $("#categoryPV").load('/Categories/_DeletePV/' + $(this).data('id'));
        })
    </script>
}
