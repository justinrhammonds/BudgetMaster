@model BudgetMaster.Models.CodeFirst.Category

@{
    ViewBag.Title = "Delete";
}


<div class="modal-dialog">
    <div class="panel panel-default">
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="panel-title">Delete The Category "@Model.Name"?</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Delete", "Categories"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="col-xs-12">
                    <p>Are you sure you want to delete the @Model.Type Category: "@Model.Name"?</p>
                </div>
                <hr />
                <div class="col-xs-12">
                    <div class="pull-right">
                        <input type="submit" value="Yes, Delete" class="btn btn-success" />
                        <input type="button" value="No, Cancel" class="btn btn-success" data-dismiss="modal" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>
