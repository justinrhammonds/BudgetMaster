@{
    ViewBag.Title = "Home";
}

@{
    Layout = "~/Views/Shared/_StartLayout.cshtml";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="intro-message">
            <img src="~/Content/BudgetMasterLogo.svg" />
            <h3>Personal Finance Management Tool</h3>
            <hr class="intro-divider">
            <ul class="list-inline intro-social-buttons">
                <li>
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class= "btn btn-default btn-lg" })
                </li>
                <li>
                    @Html.ActionLink("Sign Up", "Register", "Account", null, new { @class = "btn btn-default btn-lg" })
                </li>

            </ul>
        </div>
    </div>
</div>
