<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Change Your Display Name</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("ManageDisplayName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="col-xs-12">
                <label class="strong" for="FirstName">First Name:</label>
                <input class="form-control" name="FirstName" value="@Model.FirstName" />
            </div>
            <div class="col-xs-12 x-pad-top">
                <label class="strong" for="LastName">Last Name:</label>
                <input class="form-control" name="LastName" value="@Model.LastName" />
            </div>
            <hr />
            <div class="col-xs-12">
                <div class="pull-right">
                    <input type="submit" value="Change Display Name" class="btn btn-success" />
                    @Html.ActionLink("Cancel", "Index", "Manage", new { @class = "btn btn-success" })
                </div>
            </div>
        }
    </div>
</div>
