@model BudgetMaster.Models.CodeFirst.Account

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Accounts"))
{
    @Html.AntiForgeryToken()
    <div class="form-inline panel panel-default">
        <div class="panel-heading">
            <strong>Create New Account</strong>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*<input type="hidden" name="Id" value="@Model.Id" />*@
                @*<input type="hidden" name="HouseholdId" value="@ViewBag.HouseholdId" />*@
                <input type="text" name="Name" class="form-control" placeholder="Account Name" />
                <input type="text" name="Balance" class="form-control" placeholder="Starting Balance" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
            </div>
        </div>
        <button class="btn btn-default panel-footer col-xs-12" type="submit">
            Create Account
        </button>
    </div>
}