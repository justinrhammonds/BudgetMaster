@model BudgetMaster.Models.CodeFirst.Account

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Accounts"))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading"><strong>Delete:</strong> @Model.Name?</div>
        <div class="panel-body">
            <input type="hidden" name="Id" value="@Model.Id" />
            @*<input type="hidden" name="HouseholdId" value="@Model.HouseholdId" />*@
            <p>Are you sure you want to delete this account?</p>
        </div>
        <div class="panel-footer btn-footer">
            <div class="row">
                <input class="btn btn-success col-xs-6" type="submit" value="Delete" />
                <a class="btn btn-success col-xs-6" href=@Url.Action("Index","Transactions")>Cancel</a>
            </div>
        </div>
    </div>
}
