@model IEnumerable<BudgetMaster.Models.CodeFirst.BudgetItem>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-12">
    <div id="budgetItemPV"></div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div>
                <button class="btn createPV">Create New Budget Item</button>
            </div>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Household.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Household.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            <span>
                                <button class="btn editPV" data-id=@item.Id><i class="fa fa-pencil"></i></button>
                                <button class="btn deletePV" data-id=@item.Id><i class="fa fa-trash"></i></button>
                            </span>
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
    </div>

        @section Scripts {
            <script>
                $(".createPV").click(function () {
                    $("#budgetItemPV").load('/BudgetItems/_CreatePV/');
                })
                $(".editPV").click(function () {
                    $("#budgetItemPV").load('/BudgetItems/_EditPV/' + $(this).data('id'));
                })
                $(".deletePV").click(function () {
                    $("#budgetItemPV").load('/BudgetItems/_DeletePV/' + $(this).data('id'));
                })
            </script>
        }
