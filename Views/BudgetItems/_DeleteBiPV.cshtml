@model BudgetMaster.Models.CodeFirst.BudgetItem

@{
    ViewBag.Title = "Delete";
}

<div class="modal-dialog">
    <div class="panel panel-default">
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="panel-title">Delete This Budget Item?</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Delete", "BudgetItems"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="col-xs-12">
                    <p>Are you sure you want to delete this budget item?</p>
                    <hr />
                    <p><strong>"@Model.Name"</strong> listed as an @Model.Category.Type in the @Model.Category.Name category for  "$@Model.Amount" per month?</p>
                </div>
                <hr />
                <div class="col-xs-12 pull-right">
                    <input type="submit" value="Yes, Delete" class="btn btn-success" />
                    <input type="button" value="No, Cancel" class="btn btn-success" data-dismiss="modal" />
                </div>

            }
        </div>
    </div>
</div>

