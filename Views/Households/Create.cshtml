@model BudgetMaster.Models.CodeFirst.Household

@{
    ViewBag.Title = "Create";
}

        <div class="row">
            <div class="col-xs-12" style="text-align:center;">
                @* VIEWBAG MESSAGE HERE *@
                <h4>@ViewBag.FirstCreateOrJoin</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 panel panel-default">
                <div class="panel-heading">
                    <h4>Create a New Group</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "Households"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                                <div class="col-sm-10 col-sm-offset-1"><h5>Create a Name for Your Group:</h5></div>
                                <div class="col-sm-10 col-sm-offset-1">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a Name For Your Group" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-offset-1 col-md-10 x-pad-top">
                                    <input type="submit" value="Create" class="btn btn-success pull-right" />
                                </div>
                            
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-6 panel panel-default">
                <div class="panel-heading">
                    <h4>Join an Existing Group</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Join", "Households"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-sm-10 col-sm-offset-1"><h5>Enter Your Invite Code:</h5></div>
                                <div class="col-sm-10 col-sm-offset-1">
                                    <input type="text" class="form-control" name="Code" placeholder="Type the Code You Received via Email"/>
                                    @*@Html.TextBoxFor(model => model.Invites, new { @class = "form-control", placeholder = "Type the Code You Received via Email" })*@
                                    @Html.ValidationMessageFor(model => model.Invites, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-10 col-sm-offset-1 x-pad-top">
                                    <input type="submit" value="Join" class="btn btn-success pull-right" />
                                </div>

                        </div>
                    }
                </div>
            </div>
        </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
