<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | BudgetMaster</title>
    <link href='https://fonts.googleapis.com/css?family=Questrial|Montserrat:700' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="~/jh-favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/timeline.css" rel="stylesheet" />
    <link href="~/Content/sb-admin-2.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap-social.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.datatables.net/buttons/1.1.2/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/responsive/2.0.2/css/responsive.dataTables.min.css" rel="stylesheet" type="text/css" />
    
</head>
<body>
    <header>
        <div class="pull-right">
            @Html.Partial("_LoginPartial")
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">
                <img class="brand-logo" src="~/Content/budget-logo.svg" />
            </a>
        </div>
    </header>
    <div id="page-wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="household-name">
                <div class="flex-container">
                    <a class="flex-item" href="@Url.Action("Index","Households")">
                        <i class="fa fa-home"></i>
                        <p>View Your Dashboard</p>
                    </a>
                    <a class="flex-item" href="@Url.Action("Index","Transactions")">
                        <i class="fa fa-money"></i>
                        <p>Accounts & Transactions</p>
                    </a>
                    <a class="flex-item" href="@Url.Action("Index","BudgetItems")">
                        <i class="fa fa-balance-scale"></i>
                        <p>Manage Your Budget</p>
                    </a>
                    <a class="flex-item" href="@Url.Action("Index","Manage")">
                        <i class="fa fa-users"></i>
                        <p>Manage Your Group</p>
                    </a>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

    @* LEAVE HH MODAL *@
    <div id="leaveModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="panel-title">Leave This Household?</h4>
                </div>
                <div class="panel-body">
                    <form action=@Url.Action("Leave", "Households") method="post">
                        <div>
                            <p>Upon leaving, <span class="text-warning">you will no longer have access to your information</span> saved to this household.</p>
                            <p>Are you sure you would like to leave your current household?</p>
                            <input type="submit" value="Yes, Leave" class="btn btn-success" />
                            <input type="button" value="No, Cancel" class="btn btn-success" data-dismiss="modal" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/jquery.easing.compatibility.js"></script>
        <script src="~/Scripts/metisMenu.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
        <script src="~/Scripts/sb-admin-2.js"></script>
        <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.1.2/js/buttons.print.min.js"></script>
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/responsive/2.0.2/js/dataTables.responsive.min.js"></script>
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>
