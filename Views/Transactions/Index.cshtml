@model IEnumerable<BudgetMaster.Models.CodeFirst.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Account
        </th>
        <th>
            Category
        </th>
        <th>
            Date
        </th>
        <th>
            Amount
        </th>
        <th>
            Reconciled?
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var color = item.Category.Type == "Expense" ? "red" : "black";
    var amount = item.Category.Type == "Expense" ? "($" + @item.Amount + ")" : "$" + @item.Amount;
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Account.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @item.PostedDate.ToString("M/d/yy")
        </td>
        <td style="color:@color">@amount
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reconciled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
