@model BudgetMaster.Models.CodeFirst.Transaction

@{
    ViewBag.Title = "Delete";
}

<div class="modal-dialog">
    <div class="panel panel-default">
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="panel-title">Delete This Transaction?</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Delete", "Transactions"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="col-xs-12">
                    <p>Are you sure you want to delete this transaction?</p>
                    <hr />
                    <p><strong>"@Model.Description"</strong> posted as an @Model.Category.Type on @Model.PostedDate.ToString("MM/dd/yyyy") for "$@Model.Amount"?</p>
                    <p>Account: "@Model.Account.Name"</p>
                    <p>Category: "@Model.Category.Name"</p>
                </div>
                <hr />
                <div class="col-xs-12 pull-right">
                    <input type="submit" value="Yes, Delete" class="btn btn-success" />
                    <input type="button" value="No, Cancel" class="btn btn-success" data-dismiss="modal" />
                </div>

            }
        </div>
    </div>
</div>


